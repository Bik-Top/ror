
<div class="form-group"> 
  <%= form_for :task, url: tasks_path do |f| %>
   
    <%if @task.errors.any? %>
      <% @task.errors.full_messages.each do |msg| %>
        <p class='alert alert-danger'><%= msg %></p>
      <% end %>
    <% end %>

    <div class="form-group">
      <label for="line_1" style = 'text-transform: uppercase;'>name task 2<%= tasks_path%>2</label>
      <%= f.text_field :name, :class=>"form-control", :id=>"line_1" %>
    </div>
    <%= f.submit({ :class => 'btn btn-primary'}) %>
  <%end%>
</div>

